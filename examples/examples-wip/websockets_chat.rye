
event: new-channel 10

handle-chat: fn { s c } {
	print "starting a websocket handle"
	send event eval { "new" s } 
	forever { 
		read s :m
		print "read a message"
		send event eval { "msg" m }
	} 
}

hub: fn { e } {
	sockets: { }
	forever {
		print "waiting for message"
		read e :msg
		print msg
		print "FROM HUB: " + msg
	} 
}

go-with event ?hub

new-server ":8080"
|handle-ws "/chat" ?handle-chat  
 |serve
